<ListScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MDToolbar:
            id: toolbar
            title: 'Your refrigerator'
            left_action_items: [['fridge', lambda x: print('you pressed the menu button!')]]
            right_action_items:[['dots-vertical', lambda x: print("You pressed the dots")]]
    MDGridLayout:
        id: list_layout
        cols: 1
        pos_hint: {"top": .89, "left": 1}
        size_hint: 1, .2
        spacing: 145
    MDFloatLayout:
        orientation: 'vertical'  
        MDFloatingActionButton:
            id: add_button
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {'center_x': .85, 'center_y': .1}
            icon: 'plus'
            on_press: 
                root.manager.current = 'user_input_screen'
                root.manager.transition.direction = 'left'
    # Add item cards for later