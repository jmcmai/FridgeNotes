<UserInputScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MDToolbar:
            id: toolbar
            title: 'Add New Item'
            left_action_items: [['menu', lambda x: print("You pressed the menu")]]
            right_action_items:[['dots-vertical', lambda x: print("You pressed the dots")]]
        MDFloatLayout:
            MDTextField:
                id: grocery_item
                hint_text: "Enter Grocery Item"
                helper_text: "or forgot the name of the grocery item"
                helper_text_mode: "on_focus"
                icon_right: "food"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                size_hint_x: .7
                width: 200
                required: True
                # line_color_normal: 1, 1, 0, 1
            MDTextField:
                id: quantity
                input_filter: 'int'
                hint_text: "Quantity"
                helper_text: "must be a number"
                helper_text_mode: "on_focus"
                #icon_right: "note"
                #icon_right_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                size_hint_x: .7
                #max_length: 50
                #width: 200
                line_color_normal: 7, 1, 0, 1 
            MDTextField:
                id: extra_notes
                hint_text: "some extra notes"
                helper_text: "or don't need to add anything"
                helper_text_mode: "on_focus"
                icon_right: "note"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: .7
                max_length: 50
                width: 200
                line_color_normal: 7, 1, 0, 1   
            MDDropDownItem:
                id: expiry_date
                text: "Choose Expiry Date"
                icon_right: "calendar-multiple-check"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                # size_hint_x: .7
                on_release:
                    app.show_datepicker()
                #width: 200
                #line_color_normal: 2, 1, 0, 1
                #required: True
            MDRaisedButton:
                text: 'Add Item'
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                size_hint_x: None
                on_release:
                    app.update_database()
            MDRaisedButton:
                id: back
                text: 'Back'
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                size_hint_x: None
                on_release:
                    root.manager.current: 'list_screen'
                    root.manager.transition.direction: 'right'
            MDLabel:
                id: invalid_items
                text: ''
                theme_font_style: 'Button'
                theme_text_color: 'Error'
                pos_hint: {"center_x": .55, "top": .55}
            